<h2>Edit a Recipe</h2>
<%= form_for @recipe do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

<% if !@ingredients.blank? %>
    <h3>You can edit existing ingredients that go with your recipe:</h3>
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %><br><br>
<% end %>

    <h3>Or you can add new ingredients to go with your recipe:</h3>
    <%= f.fields_for :ingredients, @recipe.ingredients.build do |ingredients_fields| %>    
            <%= ingredients_fields.text_field :name %>
          <% end %><br><br> 

    <%= f.submit "Update Recipe" %>
<% end %>
